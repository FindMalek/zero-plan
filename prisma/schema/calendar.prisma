/**
 * Represents a user's calendar for organizing events.
 * @param id Unique identifier for the calendar
 * @param name Display name of the calendar (e.g., "Work", "Personal", "University")
 * @param description Optional description explaining the calendar's purpose
 * @param color Color code for the calendar in hex format (e.g., "#FF5733")
 * @param emoji Emoji icon to represent the calendar (e.g., "ðŸ“…", "ðŸ’¼", "ðŸŽ“")
 * @param isDefault Whether the calendar is the user's default calendar
 * @param isActive Whether the calendar is currently active/visible
 * @param createdAt Timestamp when the calendar was created
 * @param updatedAt Timestamp when the calendar was last updated
 * @param userId Foreign key to the user who owns this calendar
 * @param user Relationship to the User model
 * @param events Events belonging to this calendar
 */
model Calendar {
  id String @id @default(uuid())

  name        String
  description String?
  color       String  @default("#3B82F6")
  emoji       String  @default("ðŸ“…")

  isDefault Boolean @default(false)
  isActive  Boolean @default(true)

  events Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isDefault])
  @@index([isActive])
  @@map("calendar")
}
